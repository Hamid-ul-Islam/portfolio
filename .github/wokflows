name: Build and Deploy

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '16'

      - name: Install dependencies
        run: yarn install

      - name: Build project
        run: yarn build

      - name: Deploy via FTP
        uses: SamKirkland/FTP-Deploy-Action@4.3.0
        with:
          server: ftp.upworkbd.com
          username: upworkbd.com
          password: F@|>g#)<}R:8
          local-dir: .next  # Adjust this if your build output directory is different
          server-dir: /home/sites/38b/f/fbc64409f7/  # Replace with your remote directory
